extends layout

block content
    .container
        br
        h1(class="display-3")
            center 
                strong CLAV API
        h3
            center Informações da Entidade  
        br
        hr
        h5 
            center Entidade
        hr
        br
        ol
            li
                h7 
                    b Sigla da Entidade 
                    = entidade.sigla
            p
            li
                h7
                    b Designação da Entidade 
                    = entidade.designacao        
            p
            li
                h7
                    b Estado da Sigla 
                    = entidade.estado
            p
            li
                h7
                    b SIOE da Sigla 
                    = entidade.sioe
            p
            li
                h7
                    b Internacional da Sigla
                    = entidade.internacional
            p
        br
        hr
        h5 
            center Tipologias
        hr
        br      
        table.table.table-stripped
                thead.thead
                    tr
                        th.bg-dark.text-light.text Sigla
                        th.bg-dark.text-light.text Designação
                        th.bg-danger.text-light.text-center ID
                    tr
                thead
                    each tipologia in tipologias
                        tr
                            td.text= tipologia.sigla
                            td.text= tipologia.designacao
                            td.text-center= tipologia.id
        br
        hr
        h5 
            center Atividades cuja Entidade é Dona
        hr
        br      
        table.table.table-stripped
                thead.thead
                    tr
                        th.bg-dark.text-light Título
                        th.bg-danger.text-light.text-center Código
                    tr
                thead
                    each dono in donos
                        tr
                            td.text= dono.titulo
                            td.text-center= dono.codigo
        br
        hr
        h5 
            center Atividades cuja Entidade é Participante
        hr
        br      
        table.table.table-stripped
                thead.thead
                    tr
                        th.bg-dark.text-light Título
                        th.bg-danger.text-light.text-center Código
                    tr
                thead
                    each participante in participantes
                        tr
                            td.text= participante.titulo
                            td.text-center= participante.codigo
        hr
        br
        h6 <center><b>Aplicação <i>WEB</i> desenvolvida pelo aluno:</b></center>
            br
            div(style="text-align: center")
                p Diogo Nogueira - a78957@alunos.uminho.pt - <a href='http://github.com/diogoesnog'> GitHub </a>
        br
        h6
            a(href="/") <center>Voltar à <i>Homepage</i></center>
        hr
