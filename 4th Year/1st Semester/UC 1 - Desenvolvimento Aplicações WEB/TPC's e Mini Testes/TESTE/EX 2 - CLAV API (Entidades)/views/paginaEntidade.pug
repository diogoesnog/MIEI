extends layout

block content
    .container
        br
        h1(class="display-3")
            center 
                strong CLAV API
        h3
            center Informações da Entidade  
        br
        hr

        br
        ol
            li
                h7 
                    b Sigla da Entidade 
                    = entidade.sigla
            p
            li
                h7
                    b Designação da Entidade 
                    = entidade.designacao        
            p
            li
