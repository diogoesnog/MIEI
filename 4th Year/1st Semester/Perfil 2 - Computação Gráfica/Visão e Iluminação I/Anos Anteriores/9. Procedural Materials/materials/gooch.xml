<?xml version="1.0" ?>
<project name="Gooch" >
	<assets>
		<attributes>
			<attribute type="RENDERER" name="kWarm" data="VEC4" x="1.0" y = "1.0" z="0.0" w = "1.0"  />
			<attribute type="RENDERER" name="kCool" data="VEC4" x="0.0" y = "0.0" z="1.0" w = "1.0"  />
    		<attribute type="RENDERER" name="alpha" data="FLOAT" value="0.6" />
    		<attribute type="RENDERER" name="y" data="FLOAT" value="0.4" />
    		<attribute type="RENDERER" name="beta" data="FLOAT" value="0.4" />
    		<attribute type="RENDERER" name="b" data="FLOAT" value="0.4" />
		</attributes>
		<scenes>
			<scene name="Model" param="UNITIZE SWAP_YZ">
				<file name="models/T-Rex/T-Rex.obj" /> 
			</scene>
		</scenes>
		
		<viewports>
			<viewport name="MainViewport">
				<CLEAR_COLOR r="1.0" g="1.0" b="1.0" />
			</viewport>
		</viewports>
		
		<cameras>
			<camera name="MainCamera" >
				<viewport name="MainViewport" />
				<TYPE value="PERSPECTIVE"/>
				<FOV value=60/>
				<NEAR value= 0.1/>
				<FAR value= 100/>
				<POSITION x=-1.914014 y=0.492289 z=1.460414 />
				<VIEW x=0.810088 y=-0.208939 z=-0.547815 />
			</camera>
		</cameras>
		
		<lights>
			<light name="Sun">
				<DIRECTION x=2 y=-1 z=-2 />
			</light>
		</lights>
		
		<materialLibs>
			<materialLib filename="gooch.mlib" />
		</materialLibs>
	</assets>
	
	<pipelines default="Gooch">
		<pipeline name="Gooch">
			<pass class="default" name="gooch">
				<scenes>
					<scene name="Model" />
				</scenes>
				<camera name="MainCamera" />
				<lights>
					<light name="Sun" />
				</lights>
				<injectionMaps>
					<map toMaterial="*">
						<shader fromMaterial="gooch" fromLibrary="Materials" />
					</map> 
				</injectionMaps>
			</pass>
		</pipeline>
	</pipelines>

	<interface> 
		<window label="Gooch params"> 
			<var label="kWwarm" type="RENDERER" context="CURRENT"
				component="kWarm" mode = "COLOR" /> 

			<var label="kCool" type="RENDERER" context="CURRENT"
				component="kCool" mode = "COLOR" /> 

			<var label="alpha" type="RENDERER" context="CURRENT"
				component="alpha" def="min=0 max=1 step=0.01"  /> 

			<var label="y" type="RENDERER" context="CURRENT"
				component="y" def="min=0 max=1 step=0.01"  /> 

			<var label="beta" type="RENDERER" context="CURRENT"
				component="beta" def="min=0 max=1 step=0.01"  /> 

			<var label="b" type="RENDERER" context="CURRENT"
				component="b" def="min=0 max=1 step=0.01"  /> 
		</window>
	</interface>  
</project>