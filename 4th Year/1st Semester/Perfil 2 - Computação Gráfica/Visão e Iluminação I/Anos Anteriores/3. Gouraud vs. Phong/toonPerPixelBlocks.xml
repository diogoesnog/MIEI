<?xml version="1.0" ?>
<project name="Toon Per Pixel with GLSL Blocks" >
	<assets><!-- width="512" height="512" -->
		<scenes>
			<scene name="MyScene" param="UNITIZE">
				<geometry name = "sphere" 
					type = "SPHERE" 
					SLICES=10 STACKS=10 
					material="crateBox" />
				
			</scene>
		</scenes>
		
		<viewports>
			<viewport name="MainViewport">
				<CLEAR_COLOR r="1.0" g="1.0" b="1.0" />
			</viewport>
		</viewports>
		
		<cameras>
			<camera name="MainCamera" >
				<viewport name="MainViewport" />
				<TYPE value="PERSPECTIVE"/>
				<POSITION x=0 y=0 z=3 />
				<VIEW x=0 y=0 z=-1.0 />
			</camera>
		</cameras>
		
		<lights>
			<light name="Sun">
				<DIRECTION x=-2 y=-1 z=-2 />
			</light>
		</lights>
		
		<materialLibs>
			<materialLib filename="toonBlocks.mlib" />
		</materialLibs>
	</assets>
	
	<pipelines>
		<pipeline name="lighting" default="true">
			<pass class="default" name="pass1">
				<scenes>
					<scene name="MyScene" />
				</scenes>
				<camera name="MainCamera" />
				<lights>
					<light name="Sun" />
				</lights>
				<injectionMaps>
					<map toMaterial="*">
						<shader fromMaterial ="toonPerPixel" fromLibrary="Toon" />
					</map>
				</injectionMaps>
			</pass>
		</pipeline>
	</pipelines>
</project>